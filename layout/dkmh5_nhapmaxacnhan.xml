            android:layout_margin="4dp"
            android:background="@drawable/dkmh5_box_background">

            <!-- Gạch ngang -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="2dp"
                android:background="@drawable/dkmh5_dash"
